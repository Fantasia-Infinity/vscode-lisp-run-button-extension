{
  "name": "lisp-run-button",
  "displayName": "Lisp Run Button",
  "description": "Adds a run button to the editor title bar for Lisp files.",
  "version": "0.0.1",
  "publisher": "sbcl_run_button",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:lisp",
    "onLanguage:commonlisp"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.runLispScript",
        "title": "Run Lisp File",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == lisp || resourceLangId == commonlisp",
          "command": "extension.runLispScript",
          "group": "navigation@0"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.57.0",
    "glob": "^8.1.0",
    "mocha": "^10.3.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9"
  }
}
